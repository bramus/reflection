{
    "name": "bramus/reflection",
    "description": "Better Reflection for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bramus",
            "email": "bramus@bram.us"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpdocumentor/reflection-docblock": "~5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Bramus\\Reflection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Bramus\\Reflection\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "lint": "php-cs-fixer fix --diff --dry-run --ansi",
        "fix": "php-cs-fixer fix"
    }
}
